{
  "version": 2,
  "builds": [
    {
      "src": "index.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/" 
    }
  ],
  "env": {
    "MONGO_URI": "@mongo_uri", 
    "BASE_URL": "https://your-domain.vercel.app" 
  },
  "regions": ["all"],
  "output": "standalone"
}